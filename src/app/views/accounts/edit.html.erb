<%= form_with(model: @account, url: account_path(@account.name_id), method: :patch, data: { turbo: false }) do |f| %>
  <%= render 'shared/error_messages', instead: @account %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :name, '名前', class: 'login-input-label' %>
      <%= f.text_field :name, class: 'login-input-field', placeholder: '名前' %>
    </div>
    <div class="login-input">
      <%= f.label :name_id, 'ID', class: 'login-input-label' %>
      <%= f.text_field :name_id, class: 'login-input-field', placeholder: 'ID' %>
    </div>
    <div class="login-input">
      <%= f.label :icon, 'アイコン', class: 'login-input-label' %>
      <%= f.text_field :icon, class: 'login-input-field', placeholder: 'アイコン' %>
    </div>
    <div class="login-input">
      <%= f.label :bio, 'BIO', class: 'login-input-label' %>
      <%= f.text_area :bio, class: 'login-input-field', placeholder: 'BIO' %>
    </div>
  </div>
  <%= f.submit "変更" %>
<% end %>