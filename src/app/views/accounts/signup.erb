<%= form_with(model: @account, url: signup_path, data: { turbo: false }) do |f| %>
  <% if @account.errors.any? %>
    <div>
      <div>エラーが<%= @account.errors.count %>つあります</div>
      <ul>
        <% @account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :invitation_code, '招待コード', class: 'login-input-label' %>
      <%= f.text_field :invitation_code, class: 'login-input-field', placeholder: '', value: @reform.present? ? @reform[:invitation_code] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :name, '名前', class: 'login-input-label' %>
      <%= f.text_field :name, class: 'login-input-field', placeholder: '', value: @reform.present? ? @reform[:name] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :name_id, 'ID', class: 'login-input-label' %>
      <%= f.text_field :name_id, class: 'login-input-field', placeholder: '', value: @reform.present? ? @reform[:name_id] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :password, 'パスワード', class: 'login-input-label' %>
      <%= f.password_field :password, class: 'login-input-field', placeholder: '', value: @reform.present? ? @reform[:password] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :password_confirmation, 'パスワード(確認)', class: 'login-input-label' %>
      <%= f.password_field :password_confirmation, class: 'login-input-field', placeholder: '', value: @reform.present? ? @reform[:password_confirmation] : '' %>
    </div>
  </div>
  <%= f.submit "サインアップ" %>
<% end %>
<%= link_to "ログイン", login_path %>