<%= form_with(model: tag, url: url, method: method, data: { turbo: false }) do |f| %>
  <%= render 'shared/error_messages', instead: tag %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :tag_name_id, 'ID', class: 'login-input-label' %>
      <%= f.text_field :tag_name_id, class: 'login-input-field', placeholder: 'ID' %>
    </div>
    <div class="login-input">
      <%= f.label :name, '名前', class: 'login-input-label' %>
      <%= f.text_field :name, class: 'login-input-field', placeholder: 'サムネ' %>
    </div>
    <div class="login-input">
      <%= f.label :description, '紹介', class: 'login-input-label' %>
      <%= f.text_area :description, placeholder: '紹介' %>
    </div>
  </div>
  <%= f.submit "アップロード" %>
<% end %>

<link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
<script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
<script>
  const easyMDE = new EasyMDE({
    element: document.getElementById('my-text-area'),
    insertTexts: {
      horizontalRule: ["", "\n\n-----\n\n"],
      image: ["![](http://", ")"],
      link: ["[", "](https://)"],
      table: ["", "\n\n| Column 1 | Column 2 | Column 3 |\n| -------- | -------- | -------- |\n| Text     | Text      | Text     |\n\n"],
    },
    showIcons: ["code", "table"],
  })
</script>